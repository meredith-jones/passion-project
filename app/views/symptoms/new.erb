<div id="add-symptom">
  <h2>Add a symptom:</h2>
  <% if @errors %>
    <% @errors.each do |error| %>
      <%= error %><br>
    <% end %>
  <% end %>
  <form id="add-symptom-form" method='post' action='/symptoms'>
    <input type='text' name='symptom[symptom_name]' placeholder='enter your symptom'>
    <input type='text' name='symptom[severity]' placeholder='enter how severe (1-10)'>
    <input type='text' name='symptom[notes]' placeholder='any other notes'>
    <input type='hidden' name='symptom[user_id]' value='<%= current_user.id %>'><br><br>
    <input id="submit-symptom"type="submit" value='Add symptom to log!'>
  </form>
</div>